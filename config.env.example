# Network Scanner Application Environment Configuration
# Copy this file to config.env and update the values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///scanner.db

# Scan Configuration
SCAN_OUTPUT_DIR=scan_results
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600

# API Keys
SHODAN_API_KEY=your-shodan-api-key-here

# Nmap Configuration
NMAP_PATH=nmap

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scanner.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
